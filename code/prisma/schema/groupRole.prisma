enum GroupRoleType {
  LEADER
  MEMBER
}

model GroupRole {
  id      String        @id @default(cuid())
  role    GroupRoleType @default(MEMBER) // Group-level responsibility

  userId  String
  groupId String

  user   User  @relation(fields: [userId], references: [id])
  group  Group @relation(fields: [groupId], references: [id])

  // A user can only appear once in a group
  @@unique([userId, groupId], name: "user_group_unique")
  @@map("group_roles")
}
